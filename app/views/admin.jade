extends layout

block content
  h1=title
   
  h2 Rounds: 

  for round in rounds
    if round == currRound
      h2(class="active") #{currencyFormmatter.format(round, { code: 'USD', precision: 0 })}
    else 
      h2 #{currencyFormmatter.format(round, { code: 'USD', precision: 0 })}

  button(class="btn btn-a btn-lg smooth", onclick="previousRound()") Previous Round
  button(class="btn btn-a btn-lg smooth", onclick="nextRound()") Next Round

  h2 Total Donations: #{currencyFormmatter.format(totalDonations, { code: 'USD', precision: 0 })}

  script.
    function nextRound() {
      window.location.href = '/admin/nextRound'
    }
    function previousRound() {
       window.location.href = '/admin/prevRound'
    }